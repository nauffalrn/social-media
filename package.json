    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-fastify": "^11.1.5",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@sapphire/snowflake": "^3.5.5",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "drizzle-orm": "^0.44.3",
    "nestjs-cls": "^6.1.0",
